<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="/" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="all">
          <match url="/*" />
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>
        <security>
            <requestFiltering>
                <hiddenSegments>
                    <remove segment="bin" />
                </hiddenSegments>
            </requestFiltering>
        </security>
  </system.webServer>
</configuration>